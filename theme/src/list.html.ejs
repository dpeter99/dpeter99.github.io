<main>
    <article>
        <header>
            <h1><%= meta.title %></h1>
        </header>
        <!-- "{{.Content}}" pulls from the markdown content of the corresponding _index.md -->
        <%- content %>
    </article>
    <div class="card">
        <ul>
            <!-- Ranges through content/posts/*.md --> 

            <% pipeline.files.filter((d)=>ArticleHelper.subArticle(d)).forEach(doc => {%>
            <li>
                <a href="<%= ArticleHelper.getLink(doc) %>">{{.Date.Format "2006-01-02"}} | <%=doc.meta.title%></a>
            </li>
            <% }) %>
        </ul>
    </div>
</main>